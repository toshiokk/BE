# C/C++ files
file_type "C" "\.(c|C|cpp|CPP|h|H)[0-9~]*$"
color_syntax ="\<[0-9]+\>"                                                       +blue
color_syntax ="\<[A-Z_][0-9A-Z_]+\>"                                             +blue
color_syntax ="\<(void|int|char|short|long|enum|float|double|signed|unsigned)\>" +red
color_syntax ="\<(auto|static|extern|const|volatile|struct|union|typedef|sizeof)\>"  +red
color_syntax ="\<(if|else|for|while|do|switch|case|default|break|continue|return)\>" +red
color_syntax ="\<(class|inline|private|public|protected|virtual|friend|template)\>"  +red
color_syntax ="\<(bool|new|delete|this)\>"                                       +red
color_syntax ="^#[ \t]*(include|define|undef|pragma|error)\>" +magenta
color_syntax ="^#[ \t]*(if|ifdef|ifndef|else|elif|endif)\>"   +magenta
color_syntax ="\<defined\>"                                   +magenta
color_syntax ="///.*"                                         +yellow
color_syntax ="//.*"                                          +yellow
#color_syntax <"(^|[^/])/\*" >"\*/"                           +yellow
color_syntax <"/\*" >"\*/"                                    +yellow
color_syntax <"^#[ \t]*if[ \t]+0\b" >"^#[ \t]*(else|endif)\>" +magenta
color_syntax ="　" +green
color_syntax ="\t" +green
color_syntax ="\n" +green
tab_size		4

# Ruby
file_type "rb" "\.(rb|RB)$"
color_syntax ="\<[0-9]+\>"           +blue
color_syntax ="\<[A-Z_][0-9A-Z_]+\>" +blue
color_syntax ="\".*\""               +blue
color_syntax ="'.*\'"                +blue
color_syntax ="/.*/"                 +blue
color_syntax ="\<(BEGIN|END|begin|end)\>" +red
color_syntax ="\<(class|def|undef|defined?|module|alias|self|super|ensure)\>" +red
color_syntax ="\<(do|redo|yield|break|return|rescure|retry)\>" +red
color_syntax ="\<(if|unless|else|elsif|then)\>"                +red
color_syntax ="\<(for|in|while|until|case|when|return)\>"      +red
color_syntax ="\<(nil|true|false)\>" +red
color_syntax ="\<(and|or|not)\>"     +red
color_syntax <"( |\t)#.*"            +yellow
color_syntax <"^#.*"           +magenta
color_syntax <"=begin" >"=end" +magenta
color_syntax ="　" +green
color_syntax ="\t" +green
color_syntax ="\n" +green
tab_size		4

# asm files
file_type "ASM" "\.(asm|ASM|s|S)$"
color_syntax ="\<[0-9][0-9A-Fa-f_]*\>"                  +blue
color_syntax ="\<[0-9][0-9A-Fa-f_]+(d|D|h|H)\>"         +blue
color_syntax ="\<[A-Z_][0-9A-Z_]+\>"                    +blue
color_syntax ="\<(if|ife|ifdef|ifndef|else|endif)\>"    +red
color_syntax ="\<(equ|assume|org|end)\>"                +red
color_syntax ="\<(macro|endm|segment|ends|proc|endp)\>" +red
color_syntax ="\<(align|db|dw|dd|dup|mod)\>"            +red
color_syntax =";.*"          +magenta
color_syntax <"/\*" >"\*/"   +magenta
color_syntax ="　"           +green
color_syntax ="\t"           +green
color_syntax ="\n"           +green
tab_size		8

# HTML files
file_type "HTML" "\.(html|HTML|htm|HTM)$"
color_syntax ="　"           +green
color_syntax ="\t"           +green
color_syntax ="\n"           +green
color_syntax <"<" >">"       +blue
color_syntax ="&[^; 	]*;" +red
tab_size		4

# Verilog HDL files
file_type "VHDL" "\.(v|V)$"
color_syntax ="\<(module|endmodule|always|posedge|negedge|assign)\>"      +red
color_syntax ="\<(parameter|input|output|inout|wire|reg)\>"      +red
color_syntax ="\<(if|else|begin|end)\>"      +red
color_syntax ="//.*"                                          +magenta
color_syntax <"/\*" >"\*/"                                    +yellow
color_syntax ="　"           +green
color_syntax ="\t"           +green
color_syntax ="\n"           +green
tab_size		4

# VHDL files
file_type "VHDL" "\.(vhdl|VHDL|vhd|VHD)$"
color_syntax ="\<(IF|ELSE|ENDIF|THEN|WHEN)\>"      +red
color_syntax ="　"           +green
color_syntax ="\t"           +green
color_syntax ="\n"           +green
tab_size		4

# fnt text based font file
file_type "FNT" "\.(fnt|FNT)$"
color_syntax ="#"       +green -blue
tab_size		4

